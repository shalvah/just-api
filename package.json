  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shalvah/just-api.git"
  },
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=4.5.0"
  },
  "scripts": {
    "install_testapi": "cd test/api && npm install",
    "start_testapi": "npm run install_testapi && cd test/api && node server.js",
    "clean_testlogs": "rm -rf test/cli/src/logs && mkdir test/cli/src/logs",
    "test": "./node_modules/.bin/mocha --timeout 10000 test/cli/*.spec.js"
  },
  "dependencies": {
    "chalk": "2.4.1",
    "commander": "2.11.0",
    "debug": "3.1.0",
    "error-ex": "1.3.1",
    "esprima": "4.0.0",
    "glob": "7.1.2",
    "he": "1.1.1",
    "js-yaml": "^3.13.1",
    "jsonpath": "^1.0.2",
    "jsonschema": "1.2.2",
    "lodash": "^4.17.11",
    "mkdirp": "0.5.1",
    "pretty-ms": "3.1.0",
    "request": "2.85.0",
    "request-cookies": "1.1.0",
    "semver": "5.5.0",
    "serialize-error": "2.1.0",
    "string-template": "1.0.0",
    "url-parse": "1.4.3"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "cross-spawn": "6.0.5",
    "del": "3.0.0",
    "mocha": "5.2.0"
  },
  "bin": {
